<assembly>
	<id>car</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/resources/META-INF</directory>
			<outputDirectory>META-INF</outputDirectory>
			<includes>
				<include>connector-config.xml</include>
				<include>connector-descriptor.xml</include>
				<include>com.boomi.Overrides</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
            <excludes>
                <exclude>com.boomi.connsdk:connector-sdk-api</exclude>
                <exclude>com.boomi.commonsdk:common-sdk</exclude>
                <exclude>com.boomi.util:boomi-util</exclude>
                <exclude>*common*lang*</exclude>
            </excludes>
		</dependencySet>
	</dependencySets>
</assembly>
